<?xml version="1.0" encoding="UTF-8"?>
<panel>
	<section labeli18n="m.uixul.bo.doceditor.fieldsgroup.title">
		<field name="titleid" hidehelp="true" />
		<field name="firstname" hidehelp="true" />
		<field name="lastname" hidehelp="true" />
		<field name="email" hidehelp="true" />
		<field name="login" />
		<field name="generatepassword" id="users_backenduser_create_generatepassword" anonid="field_generatepassword"
			type="boolean" labeli18n="m.users.document.backenduser.generatepassword" />
		<field name="password" id="users_backenduser_create_password" anonid="field_password" type="text" required="true"
			labeli18n="m.users.document.backenduser.password"	shorthelpi18n="m.users.document.backenduser.password-help">
			<constraint name="password" parameter="auto" />
		</field>
	</section>
	<xul>
		<javascript>
			<field name="syncemailandlogin">true</field>

			<constructor><![CDATA[
				var me = this
				this.fields['generatepassword'].addEventListener('fieldChanged', function (event) {me.onGeneratepassword(event);}, true);
			]]></constructor>

			<method name="onGeneratepassword">
				<parameter name="event" />
				<body><![CDATA[
					var genPassword = (this.fields['generatepassword'].value === 'true');
					this.fields['password'].disabled = genPassword;
				]]></body>
			</method>
		</javascript>
	</xul>
</panel>