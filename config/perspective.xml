<?xml version="1.0" encoding="UTF-8"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_users/group" />
				<child model="modules_users/nogroupuserfolder" />
				<child model="modules_users/dynamicgroup" />
				<child model="modules_users/backendgroup" />
				<child model="modules_generic/systemfolder" />
			</children>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="initDefaultStructure" />
				<contextaction name="openTreeNodeOrder" />
				<contextaction name="createGroup" />
			</contextactions>
		</model>
		<model name="modules_users/user">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="removeUser" />
				<contextaction name="activate" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
				<toolbarbutton name="setRolesForModule" />
				<contextaction name="delete" />
			</contextactions>
		</model>
		<model name="modules_users/anonymoususer">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="setRolesForModule" />
			</contextactions>
		</model>
		<model name="modules_generic/systemfolder">
			<children>
				<child model="modules_users/dynamicgroup" />
			</children>
			<columns>
				<column name="refreshing" />
				<column name="autoRefresh" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="openTreeNodeOrder" />
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_users/dynamicgroup">
			<children>
				<child model="modules_users/user" from="function" />
			</children>
			<columns>
				<column name="login" flex="1" />
				<column name="email" flex="1" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="exportUsers" />
				<contextaction name="setRolesForModule" />
				<contextaction name="refreshDynamicgroup" />
			</contextactions>
		</model>
		<model name="modules_users/group">
			<children>
				<child model="modules_users/user" from="function" />
			</children>
			<drops>
				<drop model="modules_users/user" action="move" />
			</drops>
			<columns>
				<column name="login" flex="1" />
				<column name="email" flex="1" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="exportUsers" />
				<contextaction name="setRolesForModule" />
				<contextaction name="createUser" />
			</contextactions>
		</model>
		<model name="modules_users/backendgroup">
			<children>
				<child model="modules_users/user" from="function" />
			</children>
			<drops>
				<drop model="modules_users/user" action="move" />
			</drops>
			<columns>
				<column name="login" flex="1" />
				<column name="email" flex="1" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="exportUsers" />
				<contextaction name="setRolesForModule" />
				<contextaction name="createUser" />
			</contextactions>
		</model>
		<model name="modules_users/nogroupuserfolder">
			<children>
				<child model="modules_users/user" from="function" />
				<child model="modules_users/anonymoususer" from="function" />
			</children>
			<drops>
				<drop model="modules_users/user" action="move" />
			</drops>
			<columns>
				<column name="login" flex="1" />
				<column name="email" flex="1" />
			</columns>
			<contextactions>
			</contextactions>
		</model>
	</models>
	<toolbar>
		<toolbarbutton name="edit" />
		<toolbarbutton name="activate" />
		<toolbarbutton name="deactivated" />
		<toolbarbutton name="reactivate" />
		<toolbarbutton name="setRolesForModule" />
		<toolbarbutton name="delete" />
	</toolbar>
	<actions>
		<action name="refresh" single="true" icon="refresh" labeli18n="m.uixul.bo.actions.refresh" />
		<action name="edit" single="true" permission="Load" icon="edit" labeli18n="m.uixul.bo.actions.edit" />
		<action name="removeUser" icon="remove" />
		<action name="activate" permission="Activate" icon="activate" labeli18n="m.uixul.bo.actions.activate" />
		<action name="reactivate" permission="ReActivate" icon="reactivate" labeli18n="m.uixul.bo.actions.reactivate" />
		<action name="deactivated" permission="Deactivated" icon="deactivated" labeli18n="m.uixul.bo.actions.deactivate" />
		<action name="setRolesForModule" permission="GetUserModulePermission" icon="roles-for-module" />
		<action name="delete" permission="Delete" icon="delete" labeli18n="m.uixul.bo.actions.delete" />
		<action name="exportUsers" icon="download" />
		<action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" labeli18n="m.uixul.bo.actions.set-children-order" />
		<action name="createUser" icon="add" single="true" permission="Insert_user" />
		<action name="move" permission="Move" icon="up_down" labeli18n="m.uixul.bo.actions.move" />
		<action name="createGroup" icon="add" single="true" permission="Insert_group" />
		<action name="openFolder" icon="open-folder" labeli18n="m.uixul.bo.actions.openfolder" />
		<action name="refreshDynamicgroup" single="true" icon="users-frontoffice-refresh" />
		<action name="initDefaultStructure" single="true" permission="InitDefaultStructure" icon="add" />
	</actions>
</perspective>