<?xml version="1.0"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_users/frontendgroup" />
				<child model="modules_users/dynamicfrontendgroup" />
				<child model="modules_users/websitefrontendgroup" />
				<child model="modules_users/backendgroup" />
				<child model="modules_generic/systemfolder" />
			</children>
			<drops>
				<drop model="modules_users/frontendgroup" action="move" />
				<drop model="modules_users/dynamicfrontendgroup" action="move" />
				<drop model="modules_users/websitefrontendgroup" action="move" />
				<drop model="modules_users/backendgroup" action="move" />
				<drop model="modules_generic/systemfolder" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="openTreeNodeOrder" />
				<groupactions name="createOnRootFolder_">
					<contextaction name="createFrontendgroup" />
					<contextaction name="createBackendgroup" />
				</groupactions>
			</contextactions>
		</model>
		<model name="modules_generic/systemfolder">
			<children>
				<child model="modules_users/dynamicfrontendgroup" />
			</children>	
			<columns>
				<column name="refreshing" />
				<column name="autoRefresh" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="openTreeNodeOrder" />
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_users/frontenduser">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="removeUser" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="reactivate" />
				<contextaction name="deactivated" />
			</contextactions>
		</model>
		<model name="modules_users/backenduser">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="removeUser" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="reactivate" />
				<contextaction name="deactivated" />
				<contextaction name="setRolesForModule" />
			</contextactions>
		</model>
		<model name="modules_users/websitefrontenduser">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="removeUser" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="reactivate" />
				<contextaction name="deactivated" />
			</contextactions>
		</model>
		<model name="modules_users/frontendgroup">
			<children>
				<child model="modules_users/frontenduser" from="function" />
			</children>
			<drops>
				<drop model="modules_users/frontenduser" action="move" />
				<drop model="modules_users/websitefrontenduser" action="move" />
			</drops>
			<styles properties="block actualtype" />
			<columns>
				<column name="login" label="Login" flex="1" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="exportUsers" />
				<groupactions name="createFrontend_">
					<contextaction name="createFrontenduser" />
				</groupactions>
			</contextactions>
		</model>
		<model name="modules_users/dynamicfrontendgroup">
			<children>
				<child model="modules_users/frontenduser" from="function" />
			</children>
			<drops>
				<drop model="modules_users/frontenduser" action="move" />
				<drop model="modules_users/websitefrontenduser" action="move" />
			</drops>
			<styles properties="block actualtype" />
			<columns>
				<column name="login" label="Login" flex="1" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="exportUsers" />
				<contextaction name="setRolesForModule" />
				<contextaction name="refreshDynamicfrontendgroup" />
			</contextactions>
		</model>
		<model name="modules_users/backendgroup">
			<children>
				<child model="modules_users/backenduser" from="function"/>
			</children>
			<drops>
				<drop model="modules_users/backenduser" action="move" />
			</drops>
			<styles properties="block actualtype" />
			<columns>
				<column name="login" label="Login" flex="1" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="exportUsers" />
				<contextaction name="setRolesForModule" />
				<groupactions name="createBackend_">
					<contextaction name="createBackenduser" />
				</groupactions>
			</contextactions>
		</model>
		<model name="modules_users/websitefrontendgroup">
			<children>
				<child model="modules_users/websitefrontenduser" from="function"/>
			</children>
			<styles properties="block actualtype" />
			<columns>
				<column name="login" label="Login" flex="1" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="exportUsers" />
				<groupactions name="createWebsiteFrontend_">
					<contextaction name="createWebsitefrontenduser" />
				</groupactions>
			</contextactions>
		</model>
	</models>
	<toolbar>
		<toolbarbutton name="edit" />
		<toolbarbutton name="delete" />
		<toolbarbutton name="activate" />
		<toolbarbutton name="deactivated" />
		<toolbarbutton name="reactivate" />
		<toolbarbutton name="setRolesForModule" />
	</toolbar>
	<actions>
		<action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;" />
		<action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;" />
		<action name="removeUser" icon="remove" label="&amp;modules.users.bo.actions.Remove-User;" />
		<action name="activate" permission="Activate" icon="activate" label="&amp;modules.uixul.bo.actions.Activate;" />
		<action name="reactivate" permission="ReActivate" icon="reactivate" label="&amp;modules.uixul.bo.actions.ReActivate;" />
		<action name="deactivated" permission="Deactivated" icon="deactivated" label="&amp;modules.uixul.bo.actions.Deactivate;" />
		<action name="setRolesForModule" permission="GetUserModulePermission" icon="roles-for-module" label="&amp;modules.users.bo.actions.SetRolesForModule;" />
		<action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;" />
		<action name="exportUsers" icon="download" label="&amp;modules.users.bo.actions.Export-Users;" />
		<action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;" />
		<action name="createFrontend_" actions="createFrontenduser" icon="add" />
		<action name="createFrontenduser" permission="Insert_frontenduser" group="createFrontend_" label="&amp;modules.users.bo.actions.Create-Frontenduser;" />
		<action name="move" permission="Move" icon="up_down" label="&amp;modules.uixul.bo.actions.Move;" />
		<action name="createBackend_" actions="createBackenduser" icon="add" />
		<action name="createBackenduser" permission="Insert_backenduser" group="createBackend_" label="&amp;modules.users.bo.actions.Create-Backenduser;" />
		<action name="createWebsiteFrontend_" actions="createWebsitefrontenduser" icon="add" />
		<action name="createWebsitefrontenduser" permission="Insert_websitefrontenduser" group="createWebsiteFrontend_" label="&amp;modules.users.bo.actions.Create-Websitefrontenduser;" />
		<action name="createOnRootFolder_" actions="createFrontendgroup,createBackendgroup" icon="add" />
		<action name="createFrontendgroup" permission="Insert_frontendgroup" group="createOnRootFolder_" label="&amp;modules.users.bo.actions.Create-Frontendgroup;" />
		<action name="createBackendgroup" permission="Insert_backendgroup" group="createOnRootFolder_" label="&amp;modules.users.bo.actions.Create-Backendgroup;" />
		<action name="createFolder" single="true" icon="create-folder" label="&amp;modules.uixul.bo.actions.Create-folder;" />
		<action name="openFolder" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;" />
		<action name="refreshDynamicfrontendgroup" single="true" icon="users-frontoffice-refresh" />
	</actions>
</perspective>